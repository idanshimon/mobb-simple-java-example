pipeline {
    agent any
    tools {
        nodejs "Node"
    }
    stages {

        stage('Setup Node') {
            steps {
                // Mimic the behavior of actions/setup-node@v3.6.0
                sh '''
                curl -sL https://deb.nodesource.com/setup_18.x | sudo -E bash -
                apt-get install -y nodejs
                node --version
                npm --version
                '''
            }
              
        }
        stage('Run Mobb on the findings and get fixes') {
            steps{
                sh '''
                git clone https://github.com/mobb-dev/action.git mobb-action
                cd mobb-action
                npm install
                npx mobbdev scan --repo https://github.com/mobb-demo/mobb-simple-java-example.git --scanner snyk --ref master
                '''
            }
        }
    }
}
